import React, { useState, useEffect } from 'react';
import { getCalendarEvents, addCalendarEvent } from '../../services/calendarService';

const Calendar = () => {
    const [events, setEvents] = useState([]);
    const [newEvent, setNewEvent] = useState({ title: '', date: '', employeeId: '', projectId: '' });

    useEffect(() => {
        const fetchEvents = async () => {
            const fetchedEvents = await getCalendarEvents();
            setEvents(fetchedEvents);
        };
        fetchEvents();
    }, []);

    const handleInputChange = (e) => {
        const { name, value } = e.target;
        setNewEvent({ ...newEvent, [name]: value });
    };

    const handleSubmit = async (e) => {
        e.preventDefault();
        await addCalendarEvent(newEvent);
        setNewEvent({ title: '', date: '', employeeId: '', projectId: '' });
        const updatedEvents = await getCalendarEvents();
        setEvents(updatedEvents);
    };

    return (
        <div>
            <h1>Calendar</h1>
            <form onSubmit={handleSubmit}>
                <input type="text" name="title" value={newEvent.title} onChange={handleInputChange} placeholder="Event Title" required />
                <input type="date" name="date" value={newEvent.date} onChange={handleInputChange} required />
                <input type="text" name="employeeId" value={newEvent.employeeId} onChange={handleInputChange} placeholder="Employee ID" required />
                <input type="text" name="projectId" value={newEvent.projectId} onChange={handleInputChange} placeholder="Project ID" required />
                <button type="submit">Add Event</button>
            </form>
            <ul>
                {events.map(event => (
                    <li key={event.id}>{event.title} on {event.date} for Employee ID: {event.employeeId} at Project ID: {event.projectId}</li>
                ))}
            </ul>
        </div>
    );
};

export default Calendar;